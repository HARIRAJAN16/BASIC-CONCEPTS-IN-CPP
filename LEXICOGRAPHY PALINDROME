#include <bits/stdc++.h>
using namespace std;

int main() {
    int arr[26];
    for(int i=0;i<26;i++)
    {
        arr[i]=0;
    }
    string s;
    cin >> s;
    for(int i=0;i<s.size();i++)
    {
        int a = s[i] - 'a';
        arr[a]++;
    }
    int count=0;
    for(int i=0;i<26;i++)
    {
        if(arr[i]%2 != 0)
        {
            count++;
        }
    }
    if(count==1 || count==0)
    {
        sort(s.begin(),s.end());
        string front = "";
        string mid = "";
        string rear = "";
        for(int i=0;i<26;i++)
        {
            int a = 0;
            if(arr[i]%2==0)
            {
                int number = arr[i]/2;
                a++;
                for(int j=0;j<number;j++)
                {
                    char c = i + 'a';
                    front = front + c;
                }
            }
            else if((arr[i]%2)==1)
            {
                char c = i + 'a';
                mid = mid + c;
                arr[i]--;
            }
            if(arr[i]%2==0 && a==0)
            {
                int number = arr[i]/2;
                for(int j=0;j<number;j++)
                {
                    char c = i + 'a';
                    front = front + c;
                }
            }
        }
        rear = front;
        reverse(front.begin(),front.end());
        cout << rear+mid+front << endl;
    }
    else
    {
        cout << false << endl;
        
    }
	return 0;
}
